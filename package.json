{
  "name": "convert-layout",
  "version": "0.5.1",
  "description": "Converts text from one keyboard layout to other",
  "keywords": [
    "keyboard",
    "keyboard layout",
    "russian",
    "english",
    "change",
    "qwerty",
    "belarusian",
    "german",
    "kazakh",
    "spanish",
    "ukrainian",
    "hebrew"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/convert-layout",
  "devDependencies": {
    "eslint": "^4.10.0",
    "eslint-ci": "^0.1.0",
    "eslint-config-logux": "^16.2.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-es5": "^1.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "pre-commit": "^1.2.2",
    "size-limit": "^0.12.1",
    "yaspeller-ci": "^0.7.0"
  },
  "scripts": {
    "prepack": "npm run build",
    "lint-staged": "lint-staged",
    "spell": "yaspeller-ci *.md",
    "lint": "eslint-ci *.js",
    "unit": "jest --coverage",
    "build": "node build.js",
    "test": "yarn build && yarn unit && yarn lint && yarn spell && size-limit"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-logux/browser",
    "rules": {
      "quotes": "off"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "size-limit": [
    {
      "path": "ru.js",
      "limit": "264 B"
    }
  ]
}
