{
  "name": "convert-layout",
  "version": "0.8.0",
  "description": "Converts text from one keyboard layout to other",
  "keywords": [
    "keyboard",
    "keyboard layout",
    "russian",
    "english",
    "change",
    "qwerty",
    "belarusian",
    "german",
    "kazakh",
    "spanish",
    "ukrainian",
    "hebrew",
    "persian",
    "farsi"
  ],
  "scripts": {
    "prepack": "npm run build",
    "lint-staged": "lint-staged",
    "spell": "yaspeller-ci *.md",
    "lint": "eslint-ci *.js",
    "unit": "jest --coverage",
    "build": "node build.js",
    "test": "yarn build && yarn unit && yarn lint && yarn spell && size-limit"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/convert-layout",
  "devDependencies": {
    "@logux/eslint-config": "^27.0.0",
    "clean-publish": "^1.1.0",
    "eslint": "^5.12.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "size-limit": "^0.21.1",
    "yaspeller-ci": "^1.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "size-limit": [
    {
      "path": "ru.js",
      "limit": "264 B"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config/browser",
    "rules": {
      "quotes": "off"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "dictionary": [
      "Kirilyuk",
      "Ismael",
      "Mart√≠nez",
      "cyhalothrin",
      "Yury",
      "Lebedev",
      "Vitalik",
      "Vojtehovsky",
      "Valery",
      "Bogdanov",
      "Kugman",
      "npm",
      "Versioning",
      "Anton",
      "Khlynovskiy",
      "Pepe",
      "Becker",
      "Colemak",
      "Abhinav",
      "Kasamsetty",
      "Mohammad",
      "Kazem",
      "Zaker"
    ]
  }
}
